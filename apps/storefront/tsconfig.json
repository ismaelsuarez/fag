{
  "extends": "../../packages/config/tsconfig/react.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@shared": [
        "../../packages/shared/src/index.ts"
      ],
      "@shared/*": [
        "../../packages/shared/src/*"
      ],
      "@ui": [
        "../../packages/ui/src/index.ts"
      ],
      "@ui/*": [
        "../../packages/ui/src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
